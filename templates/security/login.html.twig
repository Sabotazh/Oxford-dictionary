{% extends 'layout/auth-base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-group d-block d-md-flex row">
                <div class="card col-md-7 p-4 mb-0">
                    <div class="card-body">
                        <h1>Sign In</h1>
                        <p class="text-medium-emphasis">Sign In to your account</p>

                        {{ form_start(form) }}

                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="input-group mb-3">
                            <span class="input-group-text">
                                <i class="fa-solid fa-envelope"></i>
                            </span>
                            {{ form_widget(form.email, { 'attr': {'value': last_username} }) }}
                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <i class="fa-solid fa-key"></i>
                            </span>
                            {{ form_widget(form.password) }}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                {{ form_widget(form.submit) }}
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
                <div class="card col-md-5 text-white bg-primary py-5">
                    <div class="card-body text-center">
                        <div>
                            <h2>Sign up</h2>
                            <p>You can register in the application and get access to new features. For example, save searched words to favorites and much more!</p>
                            <a href="{{ path('app_registration') }}" class="btn btn-lg btn-outline-light mt-3">
                                Register Now!
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
