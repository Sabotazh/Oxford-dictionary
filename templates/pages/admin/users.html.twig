{% extends 'layout/base-admin.html.twig' %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Email</th>
			</tr>
		</thead>
		<tbody>
            {% if users|length > 0 %}
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <div>No users have been searched yet.</div>
            {% endif %}
		</tbody>
	</table>
{% endblock %}
