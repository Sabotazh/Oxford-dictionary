{% extends 'layout/base.html.twig' %}

{% block title %}User Profile
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-3">
			<div class="card">
				<img src="/img/no-image.png" class="rounded float-start">
				<div class="card-body">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">{{ user.name }}</li>
						<li class="list-group-item">{{ user.email }}</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card">
				<div class="card-header">
					<ul class="nav nav-tabs card-header-tabs" data-bs-tabs="tabs">
						<li class="nav-item">
							<a class="nav-link active" aria-current="true" data-bs-toggle="tab" href="#favorite">Favorite</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" data-bs-toggle="tab" href="#settings">Settings</a>
						</li>
					</ul>
				</div>
				<div class="card-body tab-content">
                    <div class="tab-pane active" id="favorite">
                        {% include 'sections/favorites.html.twig' %}
                    </div>
                    <div class="tab-pane" id="settings">
                        {% include 'sections/settings.html.twig' %}
                    </div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
