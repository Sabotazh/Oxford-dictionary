<div id="tags-cloud" class="row justify-content-center">
    <div class="col-6 align-self-center mt-5">
        <h3>Tag Clouds</h3>

        {% if tags|length > 0 %}
            {% for tag in tags %}

                <div id="tags" class="d-inline" style="font-size: 50%">
                    <small>
                        {% include 'elements/tag.html.twig' with {'title': tag.word|lower, 'id': tag.id, 'size': random(200,700)/100} %}
                    </small>
                </div>

            {% endfor %}
        {% else %}
            <div class="mt-3">No tags have been searched yet</div>
        {% endif %}

    </div>
</div>
