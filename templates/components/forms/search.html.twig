<form action="{{ path('query') }}" method="get">
    <div class="form-group row">
        <div class="col-sm-6">
            <input type="text" name="word" class="form-control" value="{{ app.request.query.get('word') }}" id="input-word" placeholder="Input word">
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-success mb-2">Search</button>
        </div>
    </div>
</form>
